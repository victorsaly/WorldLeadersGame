{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=worldleadersdb;Username=postgres;Password=postgres;",
    "DefaultConnection_Development": "Host=localhost;Database=worldleadersdb_dev;Username=postgres;Password=postgres;",
    "DefaultConnection_Production": "Host=localhost;Database=worldleadersdb_prod;Username=postgres;Password=postgres;",
    "SQLiteConnection": "Data Source=worldleaders.db",
    "Redis": "localhost:6379"
  },
  "Database": {
    "Provider": "LiteDB",
    "InMemoryName": "WorldLeadersEducationalGame"
  },
  "LiteDb": {
    "ConnectionString": "Data/worldleaders.db",
    "UsePassword": true,
    "TimeoutSeconds": 60,
    "MaxSizeMB": 100,
    "AutoShrink": true
  },
  "GameSettings": {
    "EnableChildSafetyMode": true,
    "MaxPlayersPerSession": 100,
    "SessionTimeoutMinutes": 30
  },
  "Jwt": {
    "SecretKey": "",
    "Issuer": "WorldLeadersGame",
    "Audience": "WorldLeadersGame.API",
    "ExpirationMinutes": 60,
    "ChildSessionTimeoutMinutes": 30,
    "ValidateIssuer": true,
    "ValidateAudience": true,
    "ValidateLifetime": true,
    "ClockSkewMinutes": 5
  },
  "AzureAdB2C": {
    "TenantId": "your-tenant-id",
    "ClientId": "your-client-id",
    "ClientSecret": "your-client-secret",
    "Instance": "https://yourtenant.b2clogin.com",
    "Domain": "yourtenant.onmicrosoft.com",
    "SignUpSignInPolicyId": "B2C_1_susi_educational",
    "ResetPasswordPolicyId": "B2C_1_pwd_reset_educational",
    "EditProfilePolicyId": "B2C_1_profile_edit_educational",
    "Region": "UK South",
    "Enabled": false,
    "ApiScopes": ["https://yourtenant.onmicrosoft.com/api/access"]
  },
  "ChildSafety": {
    "Enabled": true,
    "ChildAgeThreshold": 13,
    "RequireParentalConsent": true,
    "ChildSessionTimeoutMinutes": 30,
    "AdultSessionTimeoutMinutes": 120,
    "SessionWarningMinutes": 5,
    "LogAllEvents": true,
    "ContentModerationLevel": "Strict",
    "EnforceGdprCompliance": true,
    "DataRetentionDays": 365
  },
  "CostTracking": {
    "Enabled": true,
    "DailyCostLimitGBP": 0.08,
    "Currency": "GBP",
    "OpenAICostPer1KTokens": 0.02,
    "SpeechServicesCostPerHour": 0.80,
    "ContentModeratorCostPer1KCalls": 0.80,
    "BlockOnLimitExceeded": true,
    "GracePeriodMinutes": 15,
    "TimeZone": "GMT Standard Time"
  },
  "AzureCostManagement": {
    "Enabled": true,
    "SubscriptionId": "your-azure-subscription-id",
    "ResourceGroupName": "worldleaders-educational-rg",
    "Region": "UK South",
    "SyncInterval": "01:00:00",
    "Credentials": {
      "TenantId": "your-tenant-id",
      "ClientId": "your-client-id",
      "ClientSecret": "your-client-secret"
    },
    "QueryConfig": {
      "TrackedServices": [
        "Microsoft.CognitiveServices",
        "Microsoft.Web",
        "Microsoft.Storage",
        "Microsoft.KeyVault",
        "Microsoft.Insights"
      ],
      "Granularity": "Daily",
      "ResourceFilters": {
        "Environment": "Educational",
        "Application": "WorldLeadersGame"
      }
    }
  },
  "BudgetConfig": {
    "DailyLimitGBP": 0.08,
    "AlertThresholdPercentage": 0.80,
    "EmergencyThrottlingEnabled": true,
    "Region": "UK South",
    "Currency": "GBP",
    "EducationalCompliance": {
      "TargetEducationalEfficiency": 85.0,
      "RequireParentNotifications": true,
      "RequireSchoolNotifications": true,
      "EnableGdprCompliance": true,
      "DataRetentionDays": 365,
      "TrackEducationalOutcomes": true,
      "ResourceTags": {
        "Environment": "Educational",
        "AgeGroup": "12-year-olds",
        "Compliance": "GDPR-COPPA",
        "Region": "UK-South"
      }
    },
    "AlertConfiguration": {
      "EnableRealTimeAlerts": true,
      "NotificationEmails": [],
      "WebhookUrl": null,
      "MinimumAlertInterval": "00:15:00",
      "MessageTemplates": {
        "WarningTemplate": "Educational Budget Warning: Student has reached {percentage}% of daily limit (£{current}/£{limit}). Learning session will continue with monitoring.",
        "LimitExceededTemplate": "Educational Budget Limit Exceeded: Student has exceeded daily limit of £{limit}. Emergency throttling may be activated to protect educational resources.",
        "EmergencyThrottlingTemplate": "Emergency Throttling Activated: Educational session for student has been throttled due to budget protection. Contact administrator if this impacts learning objectives.",
        "EducationalEfficiencyTemplate": "Educational Efficiency Alert: Learning score of {score} points/£ is below target of {target} points/£. Consider optimizing learning activities."
      }
    }
  },
  "AzureOpenAI": {
    "Endpoint": "https://worldleaders-openai-uk.openai.azure.com/",
    "ApiKey": "",
    "DeploymentName": "gpt-4-educational",
    "ApiVersion": "2024-02-15-preview",
    "MaxTokens": 500,
    "Temperature": 0.7,
    "EducationalSystemPrompt": "You are an educational AI assistant for 12-year-old students learning geography, economics, and languages. Always provide encouraging, age-appropriate, and culturally sensitive responses that teach real-world concepts."
  },
  "ContentModerator": {
    "Endpoint": "https://uksouth.api.cognitive.microsoft.com/",
    "ApiKey": "",
    "ChildSafetyLevel": "Strict",
    "CustomBlockLists": ["violence", "inappropriate-language", "adult-themes"]
  },
  "SpeechServices": {
    "Region": "uksouth",
    "Endpoint": "https://uksouth.tts.speech.microsoft.com/",
    "ApiKey": "",
    "SupportedLanguages": ["en-GB", "en-US", "es-ES", "fr-FR", "de-DE", "zh-CN", "ja-JP"]
  },
  "Performance": {
    "Region": "UK South",
    "MaxResponseTimeMs": 1500,
    "MemoryCache": {
      "SizeLimit": 100000,
      "CompactionPercentage": 0.1,
      "ExpirationScanFrequencyMinutes": 5
    },
    "DistributedCache": {
      "DefaultExpirationMinutes": 30,
      "SlidingExpirationMinutes": 15,
      "EnableCompression": true,
      "KeyPrefix": "wlg:uk:"
    },
    "AIAgents": {
      "MaxResponseTimeMs": 1000,
      "CacheTimeoutMinutes": 15,
      "MaxConcurrentRequests": 50,
      "EnableResponseCaching": true
    },
    "GameSync": {
      "HeartbeatIntervalMs": 5000,
      "MaxRetryAttempts": 3,
      "BatchUpdateIntervalMs": 1000
    },
    "UI": {
      "InitialLoadTimeTargetMs": 1500,
      "InteractionResponseTargetMs": 300,
      "EnablePreloading": true,
      "OptimizeForTouch": true,
      "MinButtonSizePx": 48
    }
  },
  "ApplicationInsights": {
    "ConnectionString": "your-application-insights-connection-string-here",
    "EnableAdaptiveSampling": true,
    "SamplingPercentage": 100,
    "EnableQuickPulseMetricStream": true
  }
}
