<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Azure App Service web.config for ASP.NET Core API
  Context: Educational game API for 12-year-old learners
  Purpose: API routing and security configuration for production
-->
<configuration>
  <system.webServer>
    
    <!-- Enable compression for API responses -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Security headers for API protection -->
    <httpProtocol>
      <customHeaders>
        <!-- API-specific security headers -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <!-- CORS will be handled by ASP.NET Core middleware -->
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <!-- Educational API identification -->
        <add name="X-API-Type" value="Educational-Game" />
        <add name="X-Target-Age" value="12" />
        <add name="X-Safety-Level" value="Maximum" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Rewrite rules for API -->
    <rewrite>
      <rules>
        <!-- Redirect HTTP to HTTPS -->
        <rule name="Redirect to HTTPS" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
            <add input="{HTTP_HOST}" matchType="Pattern" pattern="localhost" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:0}" redirectType="Permanent" />
        </rule>
        
        <!-- Remove trailing slash for API endpoints -->
        <rule name="Remove Trailing Slash" stopProcessing="true">
          <match url="(.*)/$" />
          <conditions>
            <add input="{REQUEST_METHOD}" pattern="GET" />
            <add input="{REQUEST_URI}" pattern="^/api/" />
          </conditions>
          <action type="Redirect" url="{R:1}" redirectType="Permanent" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Error handling for API -->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <remove statusCode="404" />
      <error statusCode="404" path="/api/error/404" responseMode="ExecuteURL" />
      <remove statusCode="500" />
      <error statusCode="500" path="/api/error/500" responseMode="ExecuteURL" />
    </httpErrors>
    
    <!-- Request limits for API security -->
    <security>
      <requestFiltering>
        <!-- Maximum request size: 5MB for API -->
        <requestLimits maxAllowedContentLength="5242880" />
        <!-- Block dangerous file uploads -->
        <fileExtensions>
          <add fileExtension=".exe" allowed="false" />
          <add fileExtension=".bat" allowed="false" />
          <add fileExtension=".cmd" allowed="false" />
          <add fileExtension=".com" allowed="false" />
          <add fileExtension=".pif" allowed="false" />
          <add fileExtension=".scr" allowed="false" />
          <add fileExtension=".vbs" allowed="false" />
        </fileExtensions>
      </requestFiltering>
    </security>
    
    <!-- Static content configuration -->
    <staticContent>
      <!-- JSON MIME type for API responses -->
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
    
  </system.webServer>
  
  <!-- Application settings for API -->
  <appSettings>
    <!-- Educational API configuration -->
    <add key="API:EducationalMode" value="true" />
    <add key="API:TargetAge" value="12" />
    <add key="API:SafetyValidation" value="true" />
    <add key="API:ContentModeration" value="true" />
  </appSettings>
  
</configuration>
