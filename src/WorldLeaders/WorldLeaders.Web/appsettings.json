{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Information"
    }
  },
  "EnableSensitiveDataLogging": false,
  "EnableDetailedErrors": false,
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Host=localhost;Database=worldleadersdb;Username=postgres;Password=postgres;",
    "DefaultConnection_Development": "Host=localhost;Database=worldleadersdb_dev;Username=postgres;Password=postgres;",
    "DefaultConnection_Production": "Host=localhost;Database=worldleadersdb_prod;Username=postgres;Password=postgres;",
    "SQLiteConnection": "Data Source=worldleaders.db"
  },
  "Database": {
    "Provider": "InMemory",
    "InMemoryName": "WorldLeadersEducationalGame"
  },
  "GameSettings": {
    "EnableChildSafetyMode": true,
    "MaxPlayersPerSession": 100,
    "SessionTimeoutMinutes": 30
  }
}
