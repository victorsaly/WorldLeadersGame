<?xml version="1.0" encoding="utf-8"?>
<!-- 
  Azure App Service web.config for Blazor Server application
  Context: Educational game for 12-year-old learners
  Purpose: Proper routing and security headers for production
-->
<configuration>
  <system.webServer>
    
    <!-- Enable compression for better performance -->
    <urlCompression doStaticCompression="true" doDynamicCompression="true" />
    
    <!-- Security headers for child protection -->
    <httpProtocol>
      <customHeaders>
        <!-- Prevent clickjacking attacks -->
        <add name="X-Frame-Options" value="DENY" />
        <!-- Prevent MIME type sniffing -->
        <add name="X-Content-Type-Options" value="nosniff" />
        <!-- XSS protection -->
        <add name="X-XSS-Protection" value="1; mode=block" />
        <!-- Content Security Policy for child safety -->
        <add name="Content-Security-Policy" value="default-src 'self'; script-src 'self' 'unsafe-inline' 'unsafe-eval' https://cdn.jsdelivr.net; style-src 'self' 'unsafe-inline' https://fonts.googleapis.com; font-src 'self' https://fonts.gstatic.com; img-src 'self' data: https:; connect-src 'self' wss: https:; frame-ancestors 'none';" />
        <!-- Strict transport security for HTTPS -->
        <add name="Strict-Transport-Security" value="max-age=31536000; includeSubDomains" />
        <!-- Referrer policy -->
        <add name="Referrer-Policy" value="strict-origin-when-cross-origin" />
        <!-- Educational game identification -->
        <add name="X-Game-Type" value="Educational" />
        <add name="X-Target-Age" value="12" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Rewrite rules for SPA routing -->
    <rewrite>
      <rules>
        <!-- Redirect HTTP to HTTPS -->
        <rule name="Redirect to HTTPS" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTPS}" pattern="off" ignoreCase="true" />
            <add input="{HTTP_HOST}" matchType="Pattern" pattern="localhost" negate="true" />
          </conditions>
          <action type="Redirect" url="https://{HTTP_HOST}/{R:0}" redirectType="Permanent" />
        </rule>
        
        <!-- Handle Blazor routing -->
        <rule name="Blazor Routes" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{REQUEST_FILENAME}" matchType="IsFile" negate="true" />
            <add input="{REQUEST_FILENAME}" matchType="IsDirectory" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/api/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/_blazor/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/_framework/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/css/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/js/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/lib/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/images/" negate="true" />
            <add input="{REQUEST_URI}" pattern="^/favicon.ico$" negate="true" />
          </conditions>
          <action type="Rewrite" url="/" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Static file caching for performance -->
    <staticContent>
      <clientCache cacheControlMode="UseMaxAge" cacheControlMaxAge="30.00:00:00" />
      
      <!-- Font MIME types -->
      <remove fileExtension=".woff" />
      <mimeMap fileExtension=".woff" mimeType="font/woff" />
      <remove fileExtension=".woff2" />
      <mimeMap fileExtension=".woff2" mimeType="font/woff2" />
      
      <!-- JSON MIME type -->
      <remove fileExtension=".json" />
      <mimeMap fileExtension=".json" mimeType="application/json" />
    </staticContent>
    
    <!-- Error pages for child-friendly experience -->
    <httpErrors errorMode="Custom" existingResponse="Replace">
      <remove statusCode="404" />
      <error statusCode="404" path="/error/404" responseMode="ExecuteURL" />
      <remove statusCode="500" />
      <error statusCode="500" path="/error/500" responseMode="ExecuteURL" />
    </httpErrors>
    
    <!-- Request limits for security -->
    <security>
      <requestFiltering>
        <!-- Maximum request size: 10MB -->
        <requestLimits maxAllowedContentLength="10485760" />
        <!-- Block dangerous extensions -->
        <fileExtensions>
          <add fileExtension=".exe" allowed="false" />
          <add fileExtension=".bat" allowed="false" />
          <add fileExtension=".cmd" allowed="false" />
          <add fileExtension=".com" allowed="false" />
          <add fileExtension=".pif" allowed="false" />
          <add fileExtension=".scr" allowed="false" />
          <add fileExtension=".vbs" allowed="false" />
        </fileExtensions>
      </requestFiltering>
    </security>
    
  </system.webServer>
  
  <!-- Application settings -->
  <appSettings>
    <!-- Educational game configuration -->
    <add key="Game:TargetAge" value="12" />
    <add key="Game:SafetyLevel" value="Maximum" />
    <add key="Game:EducationalMode" value="true" />
  </appSettings>
  
</configuration>
