@inherits LayoutComponentBase

@* Clean, focused layout for educational game - retro 32-bit styling *@
<div class="main-layout">
    <main>
        <div class="top-row px-4 flex justify-between items-center bg-retro-green-main border-b-4 border-pixel-black">
            <div class="flex items-center space-x-4">
                <h1 class="retro-title text-lg" style="color: var(--text-on-green);">🌍 WORLD LEADERS</h1>
            </div>
            <AuthenticationStatus />
        </div>

        <article class="content">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .main-layout {
        width: 100vw;
        min-height: 100vh;
        margin: 0;
        padding: 0;
        background: linear-gradient(135deg, var(--retro-green-dark) 0%, var(--retro-green-main) 100%);
        font-family: 'Press Start 2P', 'Courier New', monospace;
    }

    .top-row {
        height: 60px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        padding: 0 1rem;
        background: var(--retro-green-main);
        box-shadow: 0 4px 0 var(--pixel-black);
        border-bottom: 4px solid var(--pixel-black);
    }

    .content {
        padding: 0;
        max-width: 100%;
        margin: 0 auto;
    }

    /* Remove any default body margins for clean layout */
    body, html {
        margin: 0;
        padding: 0;
        font-family: 'Press Start 2P', 'Courier New', monospace;
    }

    /* Hide blazor error UI styling - retro styled */
    #blazor-error-ui {
        background: var(--retro-red);
        color: var(--pixel-white);
        bottom: 0;
        box-shadow: 0 -4px 0 var(--pixel-black);
        display: none;
        left: 0;
        padding: 0.6rem 1.25rem 0.7rem 1.25rem;
        position: fixed;
        width: 100%;
        z-index: 1000;
        font-family: 'Press Start 2P', monospace;
        font-size: 12px;
        border-top: 4px solid var(--pixel-black);
    }

    #blazor-error-ui .dismiss {
        cursor: pointer;
        position: absolute;
        right: 0.75rem;
        top: 0.5rem;
        color: var(--pixel-white);
        font-weight: bold;
    }

    #blazor-error-ui .reload {
        color: var(--pixel-white);
        text-decoration: underline;
    }
</style>

@code {
    // Retro layout for all pages
}
