@inherits LayoutComponentBase

@* Conditional layout - clean for game pages, default for others *@
@if (IsGamePage)
{
    <!-- Clean, full-screen game layout for educational immersion -->
    <div class="game-layout">
        @Body
    </div>
}
else
{
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="top-row px-4">
                <a href="https://learn.microsoft.com/aspnet/core/" target="_blank">About</a>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>
}

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

<style>
    .game-layout {
        width: 100vw;
        height: 100vh;
        margin: 0;
        padding: 0;
        overflow-x: auto;
        overflow-y: auto;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    /* Ensure full-screen experience for game */
    body.game-mode, body.game-mode html {
        margin: 0;
        padding: 0;
        height: 100%;
        width: 100%;
        overflow-x: hidden;
    }
</style>

@code {
    [Inject] private NavigationManager Navigation { get; set; } = default!;

    private bool IsGamePage => Navigation.Uri.Contains("/game") || Navigation.Uri.EndsWith("/");
}
