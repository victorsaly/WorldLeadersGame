@inherits LayoutComponentBase

@* Mobile-First Clean Layout for Educational Game - Retro 32-bit Styling *@
<div class="main-layout retro-mobile-container">
    <!-- Skip to content link for screen readers -->
    <a href="#main-content" class="skip-to-content">Skip to main content</a>
    
    <main class="mobile-safe-area">
        <!-- Mobile-optimized top header -->
        <div class="retro-main-header">
            <div class="retro-header-content">
                <h1 class="retro-title mobile-text-base" style="color: var(--text-on-green);">🌍 WORLD LEADERS</h1>
                <AuthenticationStatus />
            </div>
        </div>

        <!-- Main content area with mobile-first responsive design -->
        <article id="main-content" class="retro-main-content" tabindex="-1">
            @Body
        </article>
        
        <!-- Mobile-first bottom padding to account for mobile navigation -->
        <div class="mobile-nav-spacer"></div>
    </main>
    
    <!-- Mobile navigation (hidden on desktop) -->
    <MobileNavMenu />
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    // Mobile-first retro layout optimized for educational gaming on touch devices
    // Educational objective: Accessible navigation and content display for 12-year-old learners
    // Safety: Touch-friendly interface with safe area support for modern mobile devices
}
