@page "/simple-test"
@rendermode @(new InteractiveServerRenderMode(prerender: false))

<PageTitle>Simple Test</PageTitle>

<div class="retro-game-container p-6">
    <div class="pixel-art-card green-theme max-w-4xl mx-auto">
        <h1 class="retro-title text-center mb-6">🧪 Simple Test Page</h1>
        
        <div class="space-y-4">
            <p class="retro-body">✅ Blazor Server is working correctly!</p>
            <p class="retro-body">🎯 No prerendering issues here</p>
            
            <div>
                <button @onclick="TestClick" class="retro-touch-button">
                    🔍 Test Button Click (Count: @clickCount)
                </button>
            </div>
        </div>
    </div>
</div>

@code {
    private int clickCount = 0;

    private void TestClick()
    {
        clickCount++;
    }
}
