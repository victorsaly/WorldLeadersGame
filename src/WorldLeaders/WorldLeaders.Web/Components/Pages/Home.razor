@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<PageTitle>World Leaders Game</PageTitle>

<div class="retro-game-container retro-mobile-container">
    <div class="pixel-art-card green-theme mobile-spacing-md">
        <!-- Game Logo/Title -->
        <div class="mobile-spacing-md">
            <h1 class="retro-title mobile-text-2xl text-center mb-4">
                🌍 WORLD LEADERS
            </h1>
            <p class="retro-subtitle text-center mb-2">EDUCATIONAL ADVENTURE GAME</p>
            <p class="retro-body mobile-text-sm text-center">Designed for ages 12 and up • Learn geography, economics & languages</p>
        </div>

        <!-- Game Features - Mobile-first grid -->
        <div class="retro-mobile-grid mobile-gap-sm mobile-spacing-md">
            <div class="pixel-art-card retro-touch-target">
                <span class="text-3xl block mb-2 text-center">🎯</span>
                <h3 class="font-bold text-retro-green-dark mb-2 font-retro mobile-text-sm text-center">STRATEGIC LEARNING</h3>
                <p class="retro-body mobile-text-xs text-center">Make decisions and learn about leadership</p>
            </div>
            <div class="pixel-art-card retro-touch-target">
                <span class="text-3xl block mb-2 text-center">🗺️</span>
                <h3 class="font-bold text-retro-green-dark mb-2 font-retro mobile-text-sm text-center">WORLD GEOGRAPHY</h3>
                <p class="retro-body mobile-text-xs text-center">Discover countries and their cultures</p>
            </div>
            <div class="pixel-art-card retro-touch-target">
                <span class="text-3xl block mb-2 text-center">🗣️</span>
                <h3 class="font-bold text-retro-green-dark mb-2 font-retro mobile-text-sm text-center">LANGUAGE LEARNING</h3>
                <p class="retro-body mobile-text-xs text-center">Practice pronunciation with AI assistance</p>
            </div>
            <div class="pixel-art-card retro-touch-target">
                <span class="text-3xl block mb-2 text-center">👥</span>
                <h3 class="font-bold text-retro-green-dark mb-2 font-retro mobile-text-sm text-center">SOCIAL SKILLS</h3>
                <p class="retro-body mobile-text-xs text-center">Learn about cooperation and diplomacy</p>
            </div>
        </div>

        <!-- How to Play -->
        <div class="pixel-art-card green-theme mobile-spacing-md">
            <h3 class="retro-subtitle mobile-text-lg mb-4 text-center">🎮 HOW TO PLAY</h3>
            <div class="mobile-gap-sm">
                <div class="retro-body mobile-text-sm flex items-start gap-3">
                    <span class="font-bold text-retro-green-main">1.</span>
                    <span>Choose your character persona and start as a farmer</span>
                </div>
                <div class="retro-body mobile-text-sm flex items-start gap-3">
                    <span class="font-bold text-retro-green-main">2.</span>
                    <span>Roll dice to determine your job and earn income</span>
                </div>
                <div class="retro-body mobile-text-sm flex items-start gap-3">
                    <span class="font-bold text-retro-green-main">3.</span>
                    <span>Purchase territories and learn their languages</span>
                </div>
                <div class="retro-body mobile-text-sm flex items-start gap-3">
                    <span class="font-bold text-retro-green-main">4.</span>
                    <span>Keep your population happy and make strategic decisions</span>
                </div>
                <div class="retro-body mobile-text-sm flex items-start gap-3">
                    <span class="font-bold text-retro-green-main">5.</span>
                    <span>Become a world leader through wisdom and diplomacy!</span>
                </div>
            </div>
        </div>

        <!-- Start Game Button - Mobile-optimized -->
        <div class="text-center mobile-spacing-md">
            <button @onclick="StartGame" 
                    class="retro-touch-button-large"
                    aria-label="Start your journey as a world leader">
                🚀 CHOOSE YOUR CHARACTER
            </button>
        </div>

        <!-- Educational Note -->
        <div class="retro-body mobile-text-xs text-center mobile-spacing-sm" style="opacity: 0.8;">
            <p class="mb-1">This game promotes positive values, critical thinking, and global awareness.</p>
            <p>All content is age-appropriate and educationally focused.</p>
        </div>
    </div>
</div>

@code {
    private void StartGame()
    {
        Navigation.NavigateTo("/character-select");
    }
}
