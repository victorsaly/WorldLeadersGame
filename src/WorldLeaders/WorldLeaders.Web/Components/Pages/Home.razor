@page "/"
@rendermode InteractiveServer
@inject NavigationManager Navigation

<PageTitle>World Leaders Game</PageTitle>

<div class="retro-game-container">
    <div class="max-w-4xl mx-auto text-center p-8">
        <div class="pixel-art-card green-theme mb-8">
            <!-- Game Logo/Title -->
            <div class="mb-8">
                <h1 class="retro-title text-4xl md:text-5xl mb-4">
                    🌍 WORLD LEADERS
                </h1>
                <p class="retro-subtitle mb-2">EDUCATIONAL ADVENTURE GAME</p>
                <p class="retro-body text-sm">Designed for ages 12 and up • Learn geography, economics & languages</p>
            </div>

            <!-- Game Features -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6 mb-8">
                <div class="pixel-art-card">
                    <span class="text-3xl block mb-2">🎯</span>
                    <h3 class="font-bold text-retro-green-dark mb-2 font-retro text-sm">STRATEGIC LEARNING</h3>
                    <p class="retro-body text-xs">Make decisions and learn about leadership</p>
                </div>
                <div class="pixel-art-card">
                    <span class="text-3xl block mb-2">🗺️</span>
                    <h3 class="font-bold text-retro-green-dark mb-2 font-retro text-sm">WORLD GEOGRAPHY</h3>
                    <p class="retro-body text-xs">Discover countries and their cultures</p>
                </div>
                <div class="pixel-art-card">
                    <span class="text-3xl block mb-2">🗣️</span>
                    <h3 class="font-bold text-retro-green-dark mb-2 font-retro text-sm">LANGUAGE LEARNING</h3>
                    <p class="retro-body text-xs">Practice pronunciation with AI assistance</p>
                </div>
                <div class="pixel-art-card">
                    <span class="text-3xl block mb-2">👥</span>
                    <h3 class="font-bold text-retro-green-dark mb-2 font-retro text-sm">SOCIAL SKILLS</h3>
                    <p class="retro-body text-xs">Learn about cooperation and diplomacy</p>
                </div>
            </div>

            <!-- How to Play -->
            <div class="pixel-art-card green-theme mb-8">
                <h3 class="retro-subtitle text-lg mb-4">🎮 HOW TO PLAY</h3>
                <div class="space-y-3 text-left">
                    <div class="retro-body text-sm flex items-start gap-3">
                        <span class="font-bold text-retro-green-main">1.</span>
                        <span>Choose your character persona and start as a farmer</span>
                    </div>
                    <div class="retro-body text-sm flex items-start gap-3">
                        <span class="font-bold text-retro-green-main">2.</span>
                        <span>Roll dice to determine your job and earn income</span>
                    </div>
                    <div class="retro-body text-sm flex items-start gap-3">
                        <span class="font-bold text-retro-green-main">3.</span>
                        <span>Purchase territories and learn their languages</span>
                    </div>
                    <div class="retro-body text-sm flex items-start gap-3">
                        <span class="font-bold text-retro-green-main">4.</span>
                        <span>Keep your population happy and make strategic decisions</span>
                    </div>
                    <div class="retro-body text-sm flex items-start gap-3">
                        <span class="font-bold text-retro-green-main">5.</span>
                        <span>Become a world leader through wisdom and diplomacy!</span>
                    </div>
                </div>
            </div>

            <!-- Start Game Button -->
            <button @onclick="StartGame" 
                    class="pixel-art-button text-lg px-8 py-4 mb-6">
                🚀 START YOUR ADVENTURE
            </button>

            <!-- Educational Note -->
            <div class="retro-body text-xs opacity-75">
                <p class="mb-1">This game promotes positive values, critical thinking, and global awareness.</p>
                <p>All content is age-appropriate and educationally focused.</p>
            </div>
        </div>
    </div>
</div>

@code {
    private void StartGame()
    {
        Navigation.NavigateTo("/game");
    }
}
