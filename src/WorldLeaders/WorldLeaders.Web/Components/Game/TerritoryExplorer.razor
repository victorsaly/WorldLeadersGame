    @apply px-4 py-2 rounded-lg font-semibold text-sm transition-all duration-200;
    @apply bg-white text-blue-600 border-2 border-blue-200 hover:bg-blue-50;
}

.btn-tab.active {
    @apply bg-blue-500 text-white border-blue-500;
