@code {
    // Educational constants for child-friendly learning
    private const double PRONUNCIATION_ACCURACY_THRESHOLD = 0.7; // 70% similarity threshold for children
    private const int FEEDBACK_DISPLAY_DURATION_MS = 3000; // 3 seconds to show feedback before auto-advancing
    
    [Parameter] public bool IsVisible { get; set; }
    [Parameter] public Guid PlayerId { get; set; }
    [Parameter] public EventCallback OnClose { get; set; }
    [Parameter] public EventCallback<(int bonusIncome, int bonusReputation)> OnRewardsEarned { get; set; }

    // Challenge state
    private List<LanguageChallengeDto> challenges = new();
    private LanguageChallengeDto? currentChallenge;
    private int currentChallengeIndex = 0;
    private int correctAnswers = 0;
    private HashSet<string> languagesLearned = new();
    private bool isLoading = false;
    private bool isSubmitting = false;
    private bool isCorrect = false;
    private string userInput = "";
    private string feedbackMessage = "";
    private int bonusIncome = 0;
    private int bonusReputation = 0;

    // Speech recognition state
    private bool speechRecognitionSupported = false;
    private bool useSpeechInput = false;
    private bool isRecording = false;
    private bool hasRecordedAudio = false;
    private byte[]? recordedAudioData = null;
    private double recordedAudioDuration = 0.0;
    private IJSObjectReference? jsModule;
    private DotNetObjectReference<LanguageLearningChallenge>? dotNetRef;
    private bool _disposed = false;
    private CancellationTokenSource _cancellationTokenSource = new();

    private bool isVisible => IsVisible;

    protected override async Task OnInitializedAsync()
    {
        // Create .NET object reference for JavaScript callbacks
        dotNetRef = DotNetObjectReference.Create(this);

        // Load JavaScript module for speech recording
        try
        {
            jsModule = await JSRuntime.InvokeAsync<IJSObjectReference>("import", "./js/speech-recording.js");
            await jsModule.InvokeVoidAsync("speechRecorderInterop.init", dotNetRef);
            
            // Check if browser supports MediaRecorder API
            var browserSupported = await jsModule.InvokeAsync<bool>("speechRecorderInterop.isSupported");
            
            Logger.LogInformation("Browser MediaRecorder support: {Supported}", browserSupported);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading speech recording JavaScript module");
        }

        // Check if speech recognition service is supported
        try
        {
            var healthStatus = await SpeechRecognitionService.CheckServiceHealthAsync();
            var serviceSupported = healthStatus.IsAvailable;
            
            // Both browser and service must support speech recognition
            speechRecognitionSupported = (jsModule != null) && serviceSupported;
            
            if (speechRecognitionSupported)
            {
                Logger.LogInformation("Speech recognition is fully available for language learning (browser + service)");
            }
            else
            {
                Logger.LogWarning("Speech recognition not fully available - Browser: {Browser}, Service: {Service}", 
                    jsModule != null, serviceSupported);
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking speech recognition availability");
            speechRecognitionSupported = false;
        }
    }

    protected override async Task OnParametersSetAsync()
    {
        if (isVisible && PlayerId != Guid.Empty && !challenges.Any())
        {
            await LoadLanguageChallenges();
        }
    }

    private async Task LoadLanguageChallenges()
    {
        try
        {
            isLoading = true;
            StateHasChanged();

            challenges = await TerritoryService.GetTerritoryLanguageChallengesAsync(PlayerId);
            
            if (challenges.Any())
            {
                currentChallengeIndex = 0;
                currentChallenge = challenges[0];
                correctAnswers = 0;
                languagesLearned.Clear();
            }

            Logger.LogInformation("Loaded {Count} language challenges for player {PlayerId}", 
                challenges.Count, PlayerId);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading language challenges for player {PlayerId}", PlayerId);
        }
        finally
        {
            isLoading = false;
            if (!_disposed)
            {
                StateHasChanged();
            }
        }
    }

    private async Task CheckAnswer()
    {
        if (currentChallenge == null || _disposed) return;

        try
        {
            isSubmitting = true;
            if (!_disposed)
            {
                StateHasChanged();
            }

            if (useSpeechInput && hasRecordedAudio && recordedAudioData != null)
            {
                // Use speech recognition for pronunciation assessment
                var pronunciationResult = await SpeechRecognitionService.AssessPronunciationAsync(
                    recordedAudioData, currentChallenge.Word, currentChallenge.LanguageCode);

                isCorrect = pronunciationResult.Passed;
                feedbackMessage = pronunciationResult.ChildFriendlyFeedback;

                Logger.LogInformation("Speech pronunciation assessment: Score={Score}, Passed={Passed}", 
                    pronunciationResult.OverallScore, pronunciationResult.Passed);
            }
            else if (!useSpeechInput && !string.IsNullOrWhiteSpace(userInput))
            {
                // Use text similarity checking for typed input
                isCorrect = CheckPronunciation(userInput.Trim(), currentChallenge.Word, currentChallenge.Pronunciation);
                
                if (isCorrect)
                {
                    feedbackMessage = GetPositiveFeedback();
                }
                else
                {
                    feedbackMessage = GetEncouragingFeedback();
                }
            }
            else
            {
                feedbackMessage = "Please provide input (speech or text) to check your pronunciation!";
                isCorrect = false;
            }
            
            if (isCorrect)
            {
                correctAnswers++;
                languagesLearned.Add(currentChallenge.LanguageCode);
            }

            if (!_disposed)
            {
                StateHasChanged();
            }
            
            // Auto-advance after showing feedback
            try
            {
                await Task.Delay(FEEDBACK_DISPLAY_DURATION_MS, _cancellationTokenSource.Token);
                if (!_disposed && !_cancellationTokenSource.Token.IsCancellationRequested)
                {
                    await NextChallenge();
                }
            }
            catch (OperationCanceledException)
            {
                // Component was disposed during delay - this is expected
                return;
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error checking language answer for challenge {LanguageCode}", 
                currentChallenge?.LanguageCode);
            feedbackMessage = "Sorry, we had trouble checking your answer. Please try again!";
        }
        finally
        {
            isSubmitting = false;
            if (!_disposed)
            {
                StateHasChanged();
            }
        }
    }

    private void SetInputMode(bool useSpeech)
    {
        useSpeechInput = useSpeech && speechRecognitionSupported;
        
        // Clear previous input when switching modes
        userInput = "";
        hasRecordedAudio = false;
        recordedAudioData = null;
        feedbackMessage = "";
        
        StateHasChanged();
    }

    private async Task StartRecording()
    {
        if (jsModule == null)
        {
            Logger.LogError("JavaScript module not loaded for speech recording");
            feedbackMessage = "Speech recording not available. Please try typing your answer instead!";
            StateHasChanged();
            return;
        }

        try
        {
            isRecording = true;
            hasRecordedAudio = false;
            feedbackMessage = "";
            StateHasChanged();

            Logger.LogInformation("Starting real microphone recording for language challenge");
            
            // Start real microphone recording via JavaScript interop
            var success = await jsModule.InvokeAsync<bool>("speechRecorderInterop.startRecording");
            
            if (!success)
            {
                isRecording = false;
                feedbackMessage = "Could not start recording. Please check microphone permissions and try again!";
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error starting real microphone recording");
            isRecording = false;
            feedbackMessage = "Recording failed to start. Please try typing your answer instead!";
            StateHasChanged();
        }
    }

    private async Task StopRecording()
    {
        if (jsModule == null || !isRecording)
        {
            return;
        }

        try
        {
            Logger.LogInformation("Stopping real microphone recording for language challenge");
            
            // Stop real microphone recording via JavaScript interop
            var success = await jsModule.InvokeAsync<bool>("speechRecorderInterop.stopRecording");
            
            if (!success)
            {
                feedbackMessage = "Recording stopped with an error. Please try again!";
                StateHasChanged();
            }
            
            // Note: isRecording will be set to false in OnAudioRecorded callback
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error stopping real microphone recording");
            isRecording = false;
            feedbackMessage = "Recording stopped with an error. Please try again!";
            StateHasChanged();
        }
    }

    private async Task SkipChallenge()
    {
        feedbackMessage = "That's okay! Every language takes practice. Let's try another one! üí™";
        StateHasChanged();
        
        await Task.Delay(2000);
        await NextChallenge();
    }

    private async Task NextChallenge()
    {
        userInput = "";
        feedbackMessage = "";
        isCorrect = false;
        hasRecordedAudio = false;
        recordedAudioData = null;

        if (currentChallengeIndex < challenges.Count - 1)
        {
            currentChallengeIndex++;
            currentChallenge = challenges[currentChallengeIndex];
        }
        else
        {
            // Challenge complete - calculate rewards
            await CompleteChallenge();
        }

        StateHasChanged();
    }

    private async Task CompleteChallenge()
    {
        try
        {
            // Calculate rewards based on performance
            var accuracyPercentage = (double)correctAnswers / challenges.Count;
            bonusIncome = (int)(correctAnswers * 50 * (1 + accuracyPercentage)); // Base 50 per correct, bonus for accuracy
            bonusReputation = Math.Min(10, correctAnswers * 2); // Max 10 reputation points

            currentChallenge = null; // This will show the completion screen

            // Notify parent component about rewards
            await OnRewardsEarned.InvokeAsync((bonusIncome, bonusReputation));

            Logger.LogInformation("Player {PlayerId} completed language challenge with {Correct}/{Total} correct answers", 
                PlayerId, correctAnswers, challenges.Count);
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error completing language challenge for player {PlayerId}", PlayerId);
        }
    }

    private void TryAgain()
    {
        currentChallengeIndex = 0;
        currentChallenge = challenges.FirstOrDefault();
        correctAnswers = 0;
        languagesLearned.Clear();
        userInput = "";
        feedbackMessage = "";
        isCorrect = false;
        bonusIncome = 0;
        bonusReputation = 0;
        hasRecordedAudio = false;
        recordedAudioData = null;
        StateHasChanged();
    }

    private async Task CloseChallenge()
    {
        await OnClose.InvokeAsync();
    }

    private async Task PlayAudio()
    {
        try
        {
            if (currentChallenge?.Word == null)
            {
                Logger.LogWarning("No current challenge word to play audio for");
                return;
            }

            // Use browser's Speech Synthesis API for educational pronunciation
            var utteranceOptions = new
            {
                text = currentChallenge.Word,
                lang = currentChallenge.LanguageCode ?? "en-US",
                rate = 0.8, // Slightly slower for learning
                pitch = 1.0,
                volume = 1.0
            };

            // Call JavaScript to use Speech Synthesis API
            await JSRuntime.InvokeVoidAsync("speechSynthesis.speak", 
                await JSRuntime.InvokeAsync<object>("createSpeechUtterance", utteranceOptions));

            Logger.LogInformation("Playing audio pronunciation for word: {Word} in language: {Language}", 
                currentChallenge.Word, currentChallenge.LanguageCode);

            // Provide visual feedback that audio is playing
            feedbackMessage = $"üîä Listen carefully to the pronunciation of '{currentChallenge.Word}'!";
            StateHasChanged();
            
            // Clear feedback after a few seconds
            await Task.Delay(FEEDBACK_DISPLAY_DURATION_MS);
            if (feedbackMessage.StartsWith("üîä"))
            {
                feedbackMessage = "";
                StateHasChanged();
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error playing audio for language challenge");
            feedbackMessage = "Sorry, audio playback is not available on this device. Try the pronunciation challenge instead!";
            StateHasChanged();
        }
    }

    private async Task HandleKeyPress(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(userInput) && !isSubmitting)
        {
            await CheckAnswer();
        }
    }

    private bool CheckPronunciation(string userInput, string targetWord, string pronunciation)
    {
        // Simplified pronunciation checking for educational purposes
        // In a real implementation, this would use advanced speech recognition
        
        var cleanUserInput = userInput.ToLowerInvariant().Replace(" ", "");
        var cleanTargetWord = targetWord.ToLowerInvariant().Replace(" ", "");
        var cleanPronunciation = pronunciation.ToLowerInvariant().Replace("-", "").Replace(" ", "");

        // Check for exact match, close phonetic match, or reasonable attempt
        return cleanUserInput == cleanTargetWord || 
               cleanUserInput == cleanPronunciation ||
               IsCloseMatch(cleanUserInput, cleanTargetWord) ||
               IsCloseMatch(cleanUserInput, cleanPronunciation);
    }

    private bool IsCloseMatch(string input, string target)
    {
        if (input.Length == 0 || target.Length == 0) return false;
        
        // Simple Levenshtein distance check for close matches
        var distance = ComputeLevenshteinDistance(input, target);
        var maxLength = Math.Max(input.Length, target.Length);
        var similarity = 1.0 - (double)distance / maxLength;
        
        return similarity >= PRONUNCIATION_ACCURACY_THRESHOLD; // 70% similarity threshold for children
    }

    private int ComputeLevenshteinDistance(string s, string t)
    {
        var d = new int[s.Length + 1, t.Length + 1];

        for (int i = 0; i <= s.Length; i++)
            d[i, 0] = i;
        for (int j = 0; j <= t.Length; j++)
            d[0, j] = j;

        for (int i = 1; i <= s.Length; i++)
        {
            for (int j = 1; j <= t.Length; j++)
            {
                int cost = (t[j - 1] == s[i - 1]) ? 0 : 1;
                d[i, j] = Math.Min(Math.Min(d[i - 1, j] + 1, d[i, j - 1] + 1), d[i - 1, j - 1] + cost);
            }
        }

        return d[s.Length, t.Length];
    }

