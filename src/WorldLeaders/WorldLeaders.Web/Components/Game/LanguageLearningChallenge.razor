    /// <param name="durationSeconds">Duration of the recording in seconds</param>
    [JSInvokable]
    public void OnAudioRecorded(string base64AudioData, double durationSeconds)
    {
        try
        {
            if (string.IsNullOrEmpty(base64AudioData))
            {
                Logger.LogWarning("Received empty audio data from JavaScript");
                isRecording = false;
                hasRecordedAudio = false;
                feedbackMessage = "No audio was captured. Please try recording again!";
                StateHasChanged();
                return;
            }

            // Convert base64 back to byte array
            recordedAudioData = Convert.FromBase64String(base64AudioData);
            recordedAudioDuration = durationSeconds;
            
            isRecording = false;
            hasRecordedAudio = true;
            
            Logger.LogInformation("Real microphone audio received: {Size} bytes, {Duration:F2} seconds", 
                recordedAudioData.Length, durationSeconds);
            
            // Provide encouraging feedback about successful recording
            if (durationSeconds < 0.5)
            {
                feedbackMessage = "Recording was very short. Try speaking a bit longer and click 'Check My Pronunciation'!";
            }
            else if (durationSeconds > 4.0)
            {
                feedbackMessage = "Great recording! That was nice and clear. Click 'Check My Pronunciation'!";
            }
            else
            {
                feedbackMessage = "Perfect! Audio recorded successfully. Click 'Check My Pronunciation'!";
            }

            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error processing recorded audio data from JavaScript");
            isRecording = false;
            hasRecordedAudio = false;
            feedbackMessage = "Error processing your recording. Please try again!";
            StateHasChanged();
        }
    }

    /// <summary>
    /// Called by JavaScript when recording encounters an error
    /// Child-friendly error handling with helpful suggestions
    /// </summary>
    /// <param name="errorMessage">Error message from JavaScript</param>
    [JSInvokable]
    public void OnRecordingError(string errorMessage)
    {
        try
        {
            Logger.LogWarning("Recording error from JavaScript: {Error}", errorMessage);
            
            isRecording = false;
            hasRecordedAudio = false;
            feedbackMessage = errorMessage; // Already child-friendly from JavaScript
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error handling recording error callback");
        }
    }

    // IAsyncDisposable Implementation
    
    public async ValueTask DisposeAsync()
    {
        _disposed = true;
        
        try
        {
            // Cancel any ongoing delays or async operations
            _cancellationTokenSource?.Cancel();
            
            // Clean up JavaScript module and stop any ongoing recording
            if (jsModule != null)
            {
                await jsModule.InvokeVoidAsync("speechRecorderInterop.dispose");
                await jsModule.DisposeAsync();
            }

            // Dispose .NET object reference
            dotNetRef?.Dispose();
            
            // Dispose cancellation token source
            _cancellationTokenSource?.Dispose();
            
            Logger.LogInformation("Language learning challenge component disposed successfully");
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error disposing language learning challenge component");
        }
    }
