@rendermode InteractiveServer
@using WorldLeaders.Shared.DTOs
@using WorldLeaders.Shared.Enums

<div class="pixel-art-card green-theme mb-6">
    <h3 class="retro-subtitle text-retro-base md:text-retro-lg mb-4 text-center">📊 Your Leadership Resources</h3>
    
    <!-- Resource Cards Grid - Better Sized Design -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
        
        <!-- Income Card -->
        <div class="pixel-art-card bg-gradient-to-br from-green-100 to-green-200 border-green-500">
            <div class="flex items-center mb-3">
                <span class="text-xl mr-3">💰</span>
                <div class="flex-1">
                    <h4 class="retro-body text-retro-sm font-bold text-green-800">Monthly Income</h4>
                    <p class="text-retro-xs text-green-600">From job & territories</p>
                </div>
            </div>
            <div class="retro-subtitle text-retro-lg font-bold text-green-800 mb-3">$@Income.ToString("N0")</div>
            <div class="retro-progress-bar h-3">
                <div class="retro-progress-fill h-3 transition-all duration-500" 
                     style="width: @GetIncomeProgress()%"></div>
            </div>
        </div>

        <!-- Reputation Card -->
        <div class="pixel-art-card bg-gradient-to-br from-blue-100 to-blue-200 border-blue-500">
            <div class="flex items-center mb-3">
                <span class="text-xl mr-3">⭐</span>
                <div class="flex-1">
                    <h4 class="retro-body text-retro-sm font-bold text-blue-800">Reputation</h4>
                    <p class="text-retro-xs text-blue-600">People's trust in you</p>
                </div>
            </div>
            <div class="retro-subtitle text-retro-lg font-bold text-blue-800 mb-3">@Reputation%</div>
            <div class="retro-progress-bar h-3">
                <div class="bg-blue-500 h-3 transition-all duration-500" 
                     style="width: @Reputation%"></div>
            </div>
        </div>

        <!-- Happiness Card -->
        <div class="pixel-art-card bg-gradient-to-br from-yellow-100 to-yellow-200 border-yellow-500">
            <div class="flex items-center mb-3">
                <span class="text-xl mr-3">😊</span>
                <div class="flex-1">
                    <h4 class="retro-body text-retro-sm font-bold text-yellow-800">Population Happiness</h4>
                    <p class="text-retro-xs text-yellow-600">How happy people are</p>
                </div>
            </div>
            <div class="retro-subtitle text-retro-lg font-bold text-yellow-800 mb-3">@Happiness%</div>
            <div class="retro-progress-bar h-3">
                <div class="bg-yellow-500 h-3 transition-all duration-500" 
                     style="width: @Happiness%"></div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public int Income { get; set; }
    [Parameter] public int Reputation { get; set; }
    [Parameter] public int Happiness { get; set; }
    [Parameter] public List<ResourceChangeRecord> RecentChanges { get; set; } = new();

    private double GetIncomeProgress()
    {
        const int goalIncome = 10000;
        return Math.Min(100, (Income / (double)goalIncome) * 100);
    }
}