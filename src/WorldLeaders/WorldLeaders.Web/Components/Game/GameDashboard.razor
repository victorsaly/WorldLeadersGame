    private async Task LoadSelectedCharacterAsync()
    {
        try
        {
            // First, try to load from query parameter
            var uri = Navigation.ToAbsoluteUri(Navigation.Uri);
            var query = HttpUtility.ParseQueryString(uri.Query);
            var characterIdParam = query["character"];
            
            if (!string.IsNullOrEmpty(characterIdParam) && Guid.TryParse(characterIdParam, out var characterId))
            {
                Logger.LogInformation("Loading character from query parameter: {CharacterId}", characterId);
                
                // Load character from service
                var availablePersonas = await PersonaService.GetAvailablePersonasAsync();
                selectedCharacterPersona = availablePersonas.FirstOrDefault(p => p.Id == characterId);
                
                if (selectedCharacterPersona != null)
                {
                    // Save to localStorage for future visits
                    await LocalStorage.SetItemAsync("selectedCharacterPersona", selectedCharacterPersona);
                    Logger.LogInformation("Character loaded from query parameter and saved to localStorage: {CharacterName}", selectedCharacterPersona.Name);
                    return;
                }
                else
                {
                    Logger.LogWarning("Character with ID {CharacterId} not found in available personas", characterId);
                }
            }
            
            // Fallback: try to load from localStorage
            selectedCharacterPersona = await LocalStorage.GetItemAsync<CharacterPersona>("selectedCharacterPersona");
            
            if (selectedCharacterPersona != null)
            {
                Logger.LogInformation("Character loaded from localStorage: {CharacterName}", selectedCharacterPersona.Name);
            }
            else
            {
                Logger.LogInformation("No character found in localStorage or query parameters");
            }
        }
        catch (Exception ex)
        {
            Logger.LogError(ex, "Error loading selected character");
            selectedCharacterPersona = null;
        }
    }

