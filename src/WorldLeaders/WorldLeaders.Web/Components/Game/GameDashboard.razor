    private void OnDiceRolled(DiceRollResult result)
    {
        if (playerDashboard == null) return;

        try
        {
            Logger.LogInformation("Processing dice roll result for player {PlayerId}: Dice={Dice}, IncomeChange={IncomeChange}, ReputationChange={ReputationChange}, HappinessChange={HappinessChange}, NewJob={NewJob}", 
                playerDashboard.Id, result.DiceValue, result.IncomeChange, result.ReputationChange, result.HappinessChange, result.NewJob);

            // Update player dashboard with new values
            var newDashboard = playerDashboard with
            {
                Income = playerDashboard.Income + result.IncomeChange, // ADD the income change to current income
                Reputation = Math.Clamp(playerDashboard.Reputation + result.ReputationChange, 0, 100),
                Happiness = Math.Clamp(playerDashboard.Happiness + result.HappinessChange, 0, 100),
                CurrentJob = result.NewJob,
                LastActiveAt = DateTime.UtcNow
            };

            Logger.LogInformation("Updated player stats: Income {OldIncome} -> {NewIncome}, Reputation {OldReputation} -> {NewReputation}, Happiness {OldHappiness} -> {NewHappiness}", 
                playerDashboard.Income, newDashboard.Income, 
                playerDashboard.Reputation, newDashboard.Reputation,
                playerDashboard.Happiness, newDashboard.Happiness);

            playerDashboard = newDashboard;

            // Add to recent changes for educational feedback
            var changeRecord = new ResourceChangeRecord(
                result.IncomeChange, // This is already the change amount
                result.ReputationChange,
                result.HappinessChange,
                result.EncouragingMessage,
                EventType.Career,
                DateTime.UtcNow
            );

            recentResourceChanges.Insert(0, changeRecord);
            if (recentResourceChanges.Count > 10)
            {
                recentResourceChanges.RemoveAt(10);
            }

            gameMessage = result.EncouragingMessage;
            StateHasChanged();
            
            Logger.LogInformation("Dice roll processing completed. TerritoryDisplayer should now reload with new reputation: {Reputation} and income: {Income}", 
                newDashboard.Reputation, newDashboard.Income);
            
            // Debug: Force another StateHasChanged after a short delay to ensure UI updates
            Logger.LogInformation("Forcing additional StateHasChanged to ensure TerritoryDisplayer receives new parameters");
            StateHasChanged();
        }
        catch (Exception ex)
        {
            gameMessage = "Something went wrong with the dice roll. Try again!";
            Logger.LogError(ex, "Error handling dice roll result for player {PlayerId}", playerDashboard?.Id);
            StateHasChanged();
        }
    }

