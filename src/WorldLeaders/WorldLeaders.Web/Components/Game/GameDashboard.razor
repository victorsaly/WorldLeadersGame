@code {
    private PlayerDashboardDto? playerDashboard;
    private UserInfoDto? currentUser;
    private bool isAuthenticated = false;
    private List<GameEventDto> gameEvents = new();
    private List<ResourceChangeRecord> recentResourceChanges = new();
    private CharacterPersona? selectedCharacterPersona;
    private string newPlayerName = "";
    private string gameMessage = "";
    private string errorMessage = "";
    private bool isLoading = false;
    private bool showLanguageChallenge = false;
    private bool showAIChat = false;
    private HubConnection? hubConnection;

    protected override async Task OnInitializedAsync()
    {
        // Check authentication first
        isAuthenticated = await AuthService.IsAuthenticatedAsync();
        
        // Try to load selected character persona from multiple sources
        await LoadSelectedCharacterAsync();
        
        // If no character selected, redirect to character selection (prevent infinite loops)
        if (selectedCharacterPersona == null)
        {
            Logger.LogInformation("No character selected, redirecting to character selection");
            var currentPath = Navigation.ToAbsoluteUri(Navigation.Uri).AbsolutePath;
            if (currentPath != "/character-select")
            {
                Navigation.NavigateTo("/character-select");
            }
            else
            {
                Logger.LogWarning("Already on character selection page but no character loaded - preventing redirect loop");
                errorMessage = "Please select a character to continue.";
            }
            return;
        }
        
        Logger.LogInformation("Character loaded: {CharacterName} ({CharacterId})", selectedCharacterPersona.Name, selectedCharacterPersona.Id);
        
        // Check if player already exists for this character
        await LoadExistingPlayerAsync();
        
        if (playerDashboard == null)
        {
            // No existing player, create one automatically
            if (isAuthenticated)
            {
                // Load current user information
                currentUser = await AuthService.GetCurrentUserAsync();
                
                if (currentUser != null)
                {
                    gameMessage = $"Welcome back, {currentUser.Username}! Ready to continue your leadership journey with {selectedCharacterPersona.Name}? üéâ";
                    
                    // Auto-create player for authenticated users
                    await CreateAuthenticatedPlayer();
                }
            }
            else
            {
                // Auto-create player for non-authenticated users
                await CreatePlayerWithCharacter();
            }
        }
        else
        {
            Logger.LogInformation("Existing player found: {PlayerId} for character {CharacterName}", playerDashboard.Id, selectedCharacterPersona.Name);
            gameMessage = $"Welcome back, {selectedCharacterPersona.Name}! Your leadership journey continues! üéâ";
        }
        
        await LoadGameEvents();
        
        // Set up SignalR connection
        try
        {
            hubConnection = HubConnectionFactory.CreateConnection();
            
            hubConnection.On<GameStateUpdate>("GameStateUpdated", (update) =>
            {
                InvokeAsync(() =>
                {
                    gameMessage = update.Message;
                    StateHasChanged();
                });
            });

            await hubConnection.StartAsync();
        }
        catch (Exception ex)
        {
            // SignalR connection failed - continue without real-time updates
            Logger.LogWarning(ex, "SignalR connection failed, continuing without real-time updates");
        }
    }

    private async Task CreateAuthenticatedPlayer()
    {
        // Clear previous errors
        errorMessage = "";
        
        // Validate character persona is selected
        if (selectedCharacterPersona == null)
        {
            errorMessage = "Please select a character to start the game.";
            Navigation.NavigateTo("/character-select");
            return;
        }

        isLoading = true;
        try
        {
            // Use authenticated HTTP client to create player linked to user account
            var httpClient = await AuthService.GetAuthenticatedHttpClientAsync();
            
            // Generate unique username to avoid conflicts when using same character multiple times
            var uniqueUsername = $"{currentUser?.Username ?? selectedCharacterPersona.Name}_{DateTime.UtcNow.Ticks % 10000}";
            var request = new CreatePlayerRequest(uniqueUsername, selectedCharacterPersona.Id);
            
            var response = await httpClient.PostAsJsonAsync("api/Game/players", request);
            if (response.IsSuccessStatusCode)
            {
                playerDashboard = await response.Content.ReadFromJsonAsync<PlayerDashboardDto>();
                if (playerDashboard != null)
                {
                    gameMessage = $"Welcome, {selectedCharacterPersona.Name}! Your authenticated leadership journey begins now! üéâ";
                    try
                    {
                        if (hubConnection != null)
                        {
                            await hubConnection.SendAsync("JoinGameSession", playerDashboard.Id.ToString());
                        }
                    }
                    catch
                    {
                        // SignalR connection failed, but player creation succeeded
                        // Continue without real-time updates
                    }
                }
                else
                {
                    errorMessage = "Failed to create your character. Please try again.";
                }
            }
            else
            {
                var errorContent = await response.Content.ReadAsStringAsync();
                errorMessage = response.StatusCode == System.Net.HttpStatusCode.Unauthorized 
                    ? "Your login session has expired. Please login again."
                    : $"Failed to create character: {response.StatusCode}";
            }
        }
        catch (HttpRequestException ex)
        {
            errorMessage = "Cannot connect to the game server. Please make sure the game is running.";
            Logger.LogWarning(ex, "Failed to connect to game server while creating authenticated player");
        }
        catch (Exception ex)
        {
            errorMessage = "An unexpected error occurred. Please try again.";
            Logger.LogError(ex, "Unexpected error while creating authenticated player");
        }
        finally
        {
            isLoading = false;
            StateHasChanged();
        }
    }

    private async Task CreatePlayer()
    {
        // Clear previous errors
        errorMessage = "";
        
        // Validate input
        if (string.IsNullOrWhiteSpace(newPlayerName))
        {
            errorMessage = "Please enter your name to start the game.";
            return;
        }

