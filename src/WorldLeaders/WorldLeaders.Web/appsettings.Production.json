{
  "Logging": {
    "LogLevel": {
      "Default": "Warning",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Error"
    }
  },
  "EnableSensitiveDataLogging": false,
  "EnableDetailedErrors": false,
  "AllowedHosts": "*.worldleadersgame.com,worldleadersgame.com",
  "ConnectionStrings": {
    "DefaultConnection": "${CONNECTION_STRING}",
    "DefaultConnection_Production": "${CONNECTION_STRING}"
  },
  "Database": {
    "Provider": "PostgreSQL",
    "InMemoryName": null
  },
  "GameSettings": {
    "EnableChildSafetyMode": true,
    "MaxPlayersPerSession": 1000,
    "SessionTimeoutMinutes": 45
  },
  "ApiSettings": {
    "BaseUrl": "https://api.worldleadersgame.co.uk",
    "TimeoutSeconds": 30,
    "RetryAttempts": 5,
    "EnableDetailedLogging": false
  },
  "Security": {
    "EnforceHttps": true,
    "RequireSecureCookies": true,
    "HstsMaxAge": "31536000",
    "ContentSecurityPolicy": "default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'; img-src 'self' data: https:; connect-src 'self' wss: https:;"
  }
}
